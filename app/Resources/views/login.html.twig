{% extends "base.html.twig" %}

{% block title %}
    {% trans %}title.services{% endtrans %}
{% endblock %}

{% block body %}
    <section id="title" class="emerald">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h1>Log in</h1>
                    {#<p>Pellentesque habitant morbi tristique senectus et netus et malesuada</p>#}
                </div>
                <div class="col-sm-6">
                    <ul class="breadcrumb pull-right">
                        <li><a href="{{ path('homepage') }}">{% trans %}menu.homepage{% endtrans %}</a></li>
                        <li class="active">Log in</li>
                    </ul>
                </div>
            </div>
        </div>
    </section><!--/#title-->

    <section id="login" class="container">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form class="center" role="form" action="{{ path('login_check') }}" method="POST">
            <fieldset class="registration-form">
                <div class="form-group">
                    <input type="text" id="username" name="_username" placeholder="Username" class="form-control" value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="_password" placeholder="Password" class="form-control">
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="form-group">
                    <button class="btn btn-success btn-md btn-block">Log in</button>
                </div>
            </fieldset>
        </form>
    </section><!--/#registration-->
{% endblock %}

