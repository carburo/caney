{% extends "base.html.twig" %}

{% block title %}
    {% trans %}contact.title{% endtrans %}
{% endblock %}

{% block headingTitle %}{{ 'contact.title'|trans }}{% endblock %}
{% block headingSubtitle %}{{ 'contact.subtitle'|trans }}{% endblock %}
{% block breadcrumbs %}
    <li><a href="{{ path('homepage') }}">{% trans %}menu.homepage{% endtrans %}</a></li>
    <li class="active">{% trans %}menu.contact{% endtrans %}</li>
{% endblock %}

{% block content %}
    <section id="contact-page">
        <div class="row">
            <div class="col-sm-12 col-lg-6 col-md-8">
                {#<h4>{% trans %}title.contact.form{% endtrans %}</h4>#}
                <div id="success-message" class="status alert alert-success" style="display: none"></div>
                {{ form_start(form, {'attr': {'class': 'contact-form' }}) }}
                <div class="form-group">
                    {{ form_row(form.name, { 'label': 'form.fullName' }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email, { 'label': 'form.email' }) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.message, {'label': 'form.message', 'attr': {'rows': '7' }}) }}
                </div>
                {{ form_widget(form) }}
                <div class="form-group">
                    <button type="submit" class="btn btn-raised btn-primary btn-lg">{% trans %}button.send{% endtrans %}</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </section><!--/#contact-page-->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#contactMenu').addClass('active');
    </script>
{% endblock %}