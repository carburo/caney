{% extends "base.html.twig" %}

{% block title %}
    {% trans %}hostels.title{% endtrans %}{#: {{ destination.name }} #}
{% endblock %}

{% block heading %}{% endblock %}
{% block content %}
    <section id="portfolio">
        <div class="row">
            <div class="col-sm-12">
                <form id="search-form">
                    <input id="search-box" type="search" class="form-control" placeholder="BÃºsqueda">
                </form>
            </div>
            <ul class="portfolio-items cols-xs-1 cols-sm-2 cols-md-3 cols-lg-3" id="hostel-gallery">
                {{ include('hostel/gallery_content.html.twig') }}
            </ul>
        </div>
    </section><!--/#portfolio-->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var form = $('#search-form');
        form.submit(function () {
            var $query = $('#search-box').val();
            $.get(Routing.generate('hostel_search', { query: $query, _locale: '{{ app.request.locale }}' }), $(this).serialize(), function(data) {
                $('#hostel-gallery').html(data);
            });
            return false;
        });
    </script>
{% endblock %}