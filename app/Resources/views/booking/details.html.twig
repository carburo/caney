{% extends "base_bare.html.twig" %}
{% import 'booking/booking_labels.html.twig' as util %}

{% block title %}
    {% trans %}booking.title{% endtrans %}: {{ hostel }}
{% endblock %}

{% block headingTitle %}
    {% trans %}booking.title{% endtrans %}
{% endblock %}

{% block headingSubtitle %}
    {{ hostel.hostelName }}
{% endblock %}

{% block content %}
    <section id="booking-page">
        {% if not_access is defined and not_access == true %}
            {% include 'booking/request_login.html.twig' %}
        {% else %}
            <div class="container">
                <p>
                    <span class="label {{ util.label_class(booking.status) }}">
                        {{ booking.status|trans }}
                    </span>
                </p>
                <p>
                    {{ booking.startDate|date('d M Y') }} - {{ booking.endDate|date('d M Y') }}
                </p>
                <p>
                {% if booking.status == 'PENDING_FOR_CONFIRMATION' %}
                    <a href="{{ path('booking_confirm', {'id': booking.id}) }}" class="btn btn-raised btn-success">Confirm</a>
                {% elseif booking.status == 'PENDING_FOR_AVAILABILITY' and is_granted('admin', booking) %}
                    <a href="{{ path('booking_confirm_availability', {'id': booking.id}) }}" class="btn btn-raised">Confirm availability</a>
                {% endif %}
                {% if booking.status != 'CANCELLED' %}
                    <a href="{{ path('booking_cancel', {'id': booking.id}) }}" class="btn btn-common">Cancel this reservation</a>
                {% endif %}
                </p>
            </div>
        {% endif %}
    </section>
    <section class="mea-blog-post-page">
        <div class="container">
            <div class="row">
                <!-- Single Blog Post -->
                <div class="single-blog-page col-md-8">
                    <div class="users-comment-section mt-20">
                        <div class="comment-box clearfix">
                            <div class="form-group label-floating col-md-12 is-empty">
                                <label class="sr-only" for="usermessage">Message</label>
                                <textarea placeholder="Type here message" id="usermessage" rows="5" required="" class="form-control"></textarea>
                            </div>
                            <a href="javascript:void(0)" id="post_message_btn" class="mt-30 btn btn-common"><i class="material-icons">îƒ‰</i>{{ 'button.send'|trans }}<div class="ripple-container"></div></a>
                        </div>

                        {% include 'FOSCommentBundle:Thread:async.html.twig' with {'id': 'foo'} %}

                        <div id="comments-container"></div>

                        <ul>
                            {% for message in messages %}
                                <li class="media">
                                    <div class="media-left">
                                        {% set image = message.user.profilePicture %}
                                        {% if(image is empty) %}
                                            <i class="material-icons icon-round md-24" style="margin-right: 0">person</i>
                                        {% else %}
                                            <img class="img-circle img-raised" src="{{ vich_uploader_asset(message.user, 'imageFile')|imagine_filter('comment_thumb') }}" alt="">
                                        {% endif %}
                                    </div>
                                    <div class="media-body">
                                        <a href="#"><h3>{{ message.user.fullName }}</h3></a>
                                        <p>
                                            {{ message.message }}
                                        </p>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

