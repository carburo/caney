{% extends 'base.html.twig' %}

{% block breadcrumbsLayout %}{% endblock %}
{% block body %}
    {% block bodyPreamble %}{% endblock %}
    <section class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                {{ knp_menu_render('AppBundle:Builder:user2Menu', {
                    'currentClass': 'active',
                    'menu_template': 'SonataBlockBundle:Block:block_side_menu_template.html.twig'
                }) }}
            </div>

            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 page active main">
                {% block heading %}
                    {{ parent() }}
                {% endblock %}
                {% block content %}
                    {{ parent() }}
                {% endblock %}
            </div>
        </div>
    </section>
{% endblock %}