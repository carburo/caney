{% trans_default_domain 'FOSUserBundle' %}

<section id="registration" class="container">

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-signin', 'role': 'form'}}) }}
    <fieldset class="registration-form">
        <div class="form-group label-floating">
            {{ form_errors(form.forename) }}
            {{ form_label(form.forename) }}
            {{ form_widget(form.forename) }}
        </div>
        <div class="form-group label-floating">
            {{ form_errors(form.surname) }}
            {{ form_label(form.surname) }}
            {{ form_widget(form.surname) }}
        </div>
        <div class="form-group label-floating">
            {{ form_errors(form.email) }}
            <label class="control-label" for="fos_user_registration_form_email">
                <i class="fa fa-envelope-o"></i> {{ form.email.vars.label|trans }}
            </label>
            {{ form_widget(form.email) }}
        </div>
        <div class="form-group label-floating">
            {{ form_errors(form.username) }}
            <label class="control-label" for="fos_user_registration_form_username">
                <i class="fa fa-user"></i> {{ form.username.vars.label|trans }}
            </label>
            {{ form_widget(form.username) }}
        </div>
        {% trans_default_domain 'messages' %}
        <div class="form-group label-floating">
            {{ form_errors(form.phoneNumber) }}
            <label class="control-label" for="fos_user_registration_form_phonenumber">
                <i class="fa fa-phone"></i> {{ form.phoneNumber.vars.label|trans }}
            </label>
            {{ form_widget(form.phoneNumber) }}
        </div>
        <div class="form-group label-floating">
            {{ form_errors(form.country) }}
            <label class="control-label" for="fos_user_registration_form_country">
                <i class="fa fa-globe"></i> {{ form.country.vars.label|trans }}
            </label>
            {{ form_widget(form.country) }}
        </div>
        {% trans_default_domain 'FOSUserBundle' %}
        <div class="form-group label-floating">
            {{ form_errors(form.plainPassword.first) }}
            <label class="control-label" for="fos_user_registration_form_password_first">
                <i class="fa fa-key"></i> {{ form.plainPassword.first.vars.label|trans }}
            </label>
            {{ form_widget(form.plainPassword.first) }}
        </div>
        <div class="form-group label-floating">
            {{ form_errors(form.plainPassword.second) }}
            <label class="control-label" for="fos_user_registration_form_password_second">
                <i class="fa fa-repeat"></i> {{ form.plainPassword.second.vars.label|trans }}
            </label>
            {{ form_widget(form.plainPassword.second) }}
        </div>
        {{ form_widget(form) }}
        <div class="form-group">
            <input type="submit" id="_submit" name="_submit" class="btn btn-raised btn-success btn-md btn-block" value="{{ 'registration.submit'|trans }}" />
        </div>
    </fieldset>
{{ form_end(form) }}

</section>
