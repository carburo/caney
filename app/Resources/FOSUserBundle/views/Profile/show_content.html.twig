{% trans_default_domain 'FOSUserBundle' %}

<figure itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
    <a href="{{ vich_uploader_asset(user, 'imageFile')|imagine_filter('app_image') }}" itemprop="contentUrl">
        <img src="{{ vich_uploader_asset(user, 'imageFile')|imagine_filter('app_thumb') }}" itemprop="thumbnail" />
    </a>
</figure>

<p>
	<strong> {{ 'profile.show.username'|trans }}:
	</strong>
	{{ user.username }}
</p>
<p>
	<strong> {{ 'profile.show.email'|trans }}:
	</strong>
	{{ user.email }}
</p>

{% trans_default_domain 'messages' %}

<p>
	<strong> {{ 'profile.show.fullName'|trans }}:
	</strong>
	{{ user.fullName }}
</p>
<p>
	<strong> {{ 'profile.show.phoneNumber'|trans }}:
	</strong>
	{{ user.phoneNumber }}
</p>
<p>
	<strong> {{ 'profile.show.country'|trans }}:
	</strong>
	{{ user.country|country }}
</p>
<a class="btn btn-primary" href="{{ path('fos_user_profile_edit') }}">{{ 'profile.change.edit' }}</a>
