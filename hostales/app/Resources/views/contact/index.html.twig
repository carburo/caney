{% extends "base.html.twig" %}

{% block title %}
    {% trans %}title.contact{% endtrans %}
{% endblock %}

{% block body %}
    <section id="title" class="emerald" xmlns="http://www.w3.org/1999/html">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h1>{% trans %}title.contact{% endtrans %}</h1>
                    <p>{% trans %}subtitle.contact{% endtrans %}</p>
                </div>
                <div class="col-sm-6">
                    <ul class="breadcrumb pull-right">
                        <li><a href="{{ path('homepage') }}">{% trans %}menu.homepage{% endtrans %}</a></li>
                        <li class="active">{% trans %}menu.contact{% endtrans %}</li>
                    </ul>
                </div>
            </div>
        </div>
    </section><!--/#title-->

    <section id="contact-page" class="container">
        {#<div class="row">#}
            {#<div class="col-sm-12">#}
                {#<p><a href="{{ path('hostel_registration') }}">Eres propietario de un hostal? Haz click aquí para llenar el formulario de inscripción.</a></p>#}
            {#</div>#}
        {#</div>#}
        <div class="row">
            <div class="col-sm-6">
                {#<h4>{% trans %}title.contact.form{% endtrans %}</h4>#}
                <div id="success-message" class="status alert alert-success" style="display: none"></div>
                {{ form_start(form, {'attr': {'class': 'contact-form' }}) }}
                <div class="form-group">
                    {{ form_widget(form.name, {'attr': {'placeholder': 'label.fullName' }}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.email, {'attr': {'placeholder': 'label.email.address' }}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.message, {'attr': {'placeholder': 'label.message', 'rows': '10' }}) }}
                </div>
                {{ form_widget(form) }}
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg">{% trans %}button.send{% endtrans %}</button>
                </div>
                {{ form_end(form) }}
            </div><!--/.col-sm-8-->
            <div class="col-sm-6">
                <h4>{% trans %}label.location{% endtrans %}</h4>
                <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script><div style="overflow:hidden;height:400px;width:600px;"><div id="gmap_canvas" style="height:400px;width:600px;"><style>#gmap_canvas img{max-width:none!important;background:none!important}</style><a class="google-map-code" href="http://www.pureblack.de/google-maps/" id="get-map-data">google maps einbinden</a></div></div><script type="text/javascript"> function init_map(){var myOptions = {zoom:17,center:new google.maps.LatLng(21.799451352702977,-79.98681348584444),mapTypeId: google.maps.MapTypeId.ROADMAP};map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(21.799451352702977, -79.98681348584444)});infowindow = new google.maps.InfoWindow({content:"<b>Hostal Cabriales</b><br/>Mercedes, 163<br/> Trinidad, Sancti Spiritus, Cuba" });google.maps.event.addListener(marker, "click", function(){infowindow.open(map,marker);});infowindow.open(map,marker);}google.maps.event.addDomListener(window, 'load', init_map);</script>
            </div><!--/.col-sm-4-->
        </div>
    </section><!--/#contact-page-->
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#contactMenu').addClass('active');
    </script>
{% endblock %}